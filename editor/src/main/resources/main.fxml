<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.trimax.venta.editor.controllers.ArchiveManagerController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Editor">
                    <MenuItem text="About" accelerator="Ctrl+H" fx:id="btnMenuEditorAbout" />
                    <MenuItem text="Exit"  accelerator="Ctrl+Q" fx:id="btnMenuEditorExit" />
                </Menu>
                <Menu text="Archive">
                    <MenuItem text="New"   accelerator="Ctrl+N" fx:id="btnMenuArchiveNew" />
                    <MenuItem text="Save"  accelerator="Ctrl+S" fx:id="btnMenuArchiveSave"/>
                    <MenuItem text="Open"  accelerator="Ctrl+O" fx:id="btnMenuArchiveLoad" />
                    <MenuItem text="Build" accelerator="Ctrl+B" fx:id="btnMenuArchiveBuild" />
                </Menu>
                <Menu text="Group">
                    <MenuItem text="Add Group"      accelerator="Ctrl+G"       fx:id="btnMenuFolderAdd" />
                    <MenuItem text="Remove Group"   accelerator="Ctrl+Shift+G" fx:id="btnMenuFolderRemove" />
                </Menu>
                <Menu text="Resource">
                    <MenuItem text="Add Resource"    accelerator="Ctrl+R"       fx:id="btnMenuFileAdd" />
                    <MenuItem text="Remove Resource" accelerator="Ctrl+Shift+R" fx:id="btnMenuFileRemove" />
                </Menu>
            </MenuBar>
            <ToolBar>
                <Button text="New" fx:id="btnToolBarArchiveNew" />
                <Button text="Save" fx:id="btnToolBarArchiveSave" />
                <Button text="Load" fx:id="btnToolBarArchiveLoad" />
                <Button text="Build" fx:id="btnToolBarArchiveBuild" />
                <Separator/>
                <Button text="Add File"      disable="true" fx:id="btnToolBarFileAdd" />
                <Button text="Remove File"   disable="true" fx:id="btnToolBarFileRemove" />
                <Button text="Add Folder"    disable="true" fx:id="btnToolBarFolderAdd" />
                <Button text="Remove Folder" disable="true" fx:id="btnToolBarFolderRemove" />
            </ToolBar>
        </VBox>
    </top>

    <left>
        <TreeView fx:id="tree" prefWidth="250"/>
    </left>

    <center>
        <VBox fx:id="info" spacing="10" style="-fx-padding:10;-fx-border-color: lightgray; -fx-border-width:1"/>
    </center>

    <bottom>
        <HBox>
            <Label fx:id="status" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
