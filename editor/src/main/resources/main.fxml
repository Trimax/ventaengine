<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.trimax.venta.editor.controllers.Controller">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Editor">
                    <MenuItem text="About" accelerator="Ctrl+H" fx:id="btnMenuEditorAbout" />
                    <MenuItem text="Exit"  accelerator="Ctrl+Q" fx:id="btnMenuEditorQuit" />
                </Menu>
                <Menu text="Archive">
                    <MenuItem text="New"   accelerator="Ctrl+N" fx:id="btnMenuArchiveNew" />
                    <MenuItem text="Save"  accelerator="Ctrl+S" fx:id="btnMenuArchiveSave"/>
                    <MenuItem text="Open"  accelerator="Ctrl+O" fx:id="btnMenuArchiveLoad" />
                    <MenuItem text="Build" accelerator="Ctrl+B" fx:id="btnMenuArchiveBuild" />
                </Menu>
                <Menu text="Group">
                    <MenuItem text="Add Group"    accelerator="Ctrl+G"       disable="true" fx:id="btnMenuGroupAdd" />
                    <MenuItem text="Remove Group" accelerator="Ctrl+Shift+G" disable="true" fx:id="btnMenuGroupRemove" />
                </Menu>
                <Menu text="Resource">
                    <MenuItem text="Add Resource"    accelerator="Ctrl+R"       disable="true" fx:id="btnMenuResourceAdd" />
                    <MenuItem text="Remove Resource" accelerator="Ctrl+Shift+R" disable="true" fx:id="btnMenuResourceRemove" />
                </Menu>
            </MenuBar>
            <ToolBar>
                <!-- Archive section -->
                <Button fx:id="btnToolBarArchiveNew">
                    <tooltip>
                        <Tooltip text="Create a new archive" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/archive/archive-new.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnToolBarArchiveSave">
                    <tooltip>
                        <Tooltip text="Save an archive" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/archive/archive-save.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnToolBarArchiveLoad">
                    <tooltip>
                        <Tooltip text="Load an archive" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/archive/archive-load.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnToolBarArchiveBuild">
                    <tooltip>
                        <Tooltip text="Build an archive" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/archive/archive-build.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Separator/>

                <!-- Groups section -->
                <Button fx:id="btnToolBarGroupAudio">
                    <tooltip>
                        <Tooltip text="Open audio section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/audio.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupBillboard">
                    <tooltip>
                        <Tooltip text="Open billboard section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/billboard.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupCamera">
                    <tooltip>
                        <Tooltip text="Open camera section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/camera.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupCubeMap">
                    <tooltip>
                        <Tooltip text="Open cube map section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/cube.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupEmitter">
                    <tooltip>
                        <Tooltip text="Open emitter section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/emitter.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupLight">
                    <tooltip>
                        <Tooltip text="Open light section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/light.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupMaterial">
                    <tooltip>
                        <Tooltip text="Open material section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/material.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupMesh">
                    <tooltip>
                        <Tooltip text="Open mesh section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/mesh.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupObject">
                    <tooltip>
                        <Tooltip text="Open object section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/object.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupProgram">
                    <tooltip>
                        <Tooltip text="Open program section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/program.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupScene">
                    <tooltip>
                        <Tooltip text="Open scene section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/scene.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupShader">
                    <tooltip>
                        <Tooltip text="Open shader section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/shader.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupSprite">
                    <tooltip>
                        <Tooltip text="Open sprite section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/sprite.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupGridMesh">
                    <tooltip>
                        <Tooltip text="Open grid mesh section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/terrain.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnToolBarGroupTexture">
                    <tooltip>
                        <Tooltip text="Open texture section" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>24</fitWidth>
                            <fitHeight>24</fitHeight>
                            <Image url="@/icons/group/texture.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </ToolBar>
        </VBox>
    </top>

    <left>
        <VBox>
            <TreeView fx:id="tree" prefWidth="250" VBox.vgrow="ALWAYS"/>
            <ToolBar>
                <Button disable="true" fx:id="btnTreeResourceAdd">
                    <tooltip>
                        <Tooltip text="Add resource" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>16</fitWidth>
                            <fitHeight>16</fitHeight>
                            <Image url="@/icons/file/file-add.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button disable="true" fx:id="btnTreeResourceRemove">
                    <tooltip>
                        <Tooltip text="Remove resource" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>16</fitWidth>
                            <fitHeight>16</fitHeight>
                            <Image url="@/icons/file/file-remove.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Separator/>

                <Button disable="true" fx:id="btnTreeFolderAdd">
                    <tooltip>
                        <Tooltip text="Add folder" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>16</fitWidth>
                            <fitHeight>16</fitHeight>
                            <Image url="@/icons/folder/folder-add.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button disable="true" fx:id="btnTreeFolderRemove">
                    <tooltip>
                        <Tooltip text="Remove folder" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <fitWidth>16</fitWidth>
                            <fitHeight>16</fitHeight>
                            <Image url="@/icons/folder/folder-remove.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </ToolBar>
        </VBox>
    </left>

    <center>
        <VBox fx:id="info" spacing="10" style="-fx-padding:10;-fx-border-color: lightgray; -fx-border-width:1"/>
    </center>

    <bottom>
        <HBox>
            <Label fx:id="status" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
