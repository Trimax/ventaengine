<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.trimax.venta.editor.controllers.heightmap.HeightmapGeneratorController">
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="600.0" prefWidth="800.0">
         <items>
            <!-- Left Panel: Controls -->
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Heightmap Generator" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                  
                  <Separator prefWidth="200.0" />
                  
                  <!-- Image Dimensions -->
                  <Label text="Image Dimensions" style="-fx-font-weight: bold;" />
                  <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                     </columnConstraints>
                     <children>
                        <Label text="Width:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Spinner fx:id="widthSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Spinner fx:id="heightSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                     </children>
                  </GridPane>
                  
                  <Separator prefWidth="200.0" />
                  
                  <!-- Noise Parameters -->
                  <Label text="Perlin Noise Parameters" style="-fx-font-weight: bold;" />
                  <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                     </columnConstraints>
                     <children>
                        <Label text="Random Seed:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Spinner fx:id="randomSeedSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Cell Size:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Spinner fx:id="cellSizeSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Levels:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Spinner fx:id="levelsSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Attenuation:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Spinner fx:id="attenuationSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
                  
                  <Separator prefWidth="200.0" />
                  
                  <!-- Effects -->
                  <Label text="Effects" style="-fx-font-weight: bold;" />
                  <VBox spacing="5.0">
                     <children>
                        <CheckBox fx:id="groovyCheckBox" text="Groovy" />
                        <CheckBox fx:id="colorCheckBox" text="Color" />
                        <CheckBox fx:id="alphaCheckBox" text="Alpha" />
                     </children>
                  </VBox>
                  
                  <Separator prefWidth="200.0" />
                  
                  <!-- Generation Controls -->
                  <Label text="Generation" style="-fx-font-weight: bold;" />
                  <VBox spacing="5.0">
                     <children>
                        <Button fx:id="generateButton" maxWidth="1.7976931348623157E308" text="Generate Heightmap" />
                        <Button fx:id="saveButton" maxWidth="1.7976931348623157E308" text="Save As..." />
                        <Button fx:id="resetButton" maxWidth="1.7976931348623157E308" text="Reset Parameters" />
                     </children>
                  </VBox>
                  
                  <!-- Spacer -->
                  <Region VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            
            <!-- Right Panel: Preview -->
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Preview" style="-fx-font-weight: bold;">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <StackPane>
                           <children>
                              <ImageView fx:id="heightmapImageView" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                              <Label fx:id="placeholderLabel" text="Generated heightmap will appear here" style="-fx-text-fill: lightgray;" />
                           </children>
                        </StackPane>
                     </content>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="0.0" />
                     </VBox.margin>
                  </ScrollPane>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
