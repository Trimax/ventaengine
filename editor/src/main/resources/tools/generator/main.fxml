<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.trimax.venta.editor.controllers.heightmap.HeightmapGeneratorController">
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="600.0" prefWidth="800.0">
         <items>
            <!-- Left Panel: Controls -->
             <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                 </padding>
                 <Label text="Heightmap Generator" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                 <Separator prefWidth="200.0"/>

                 <!-- Image Dimensions -->
                 <Label text="Image Dimensions" style="-fx-font-weight: bold;"/>
                 <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                     </columnConstraints>
                     <Label text="Width:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                     <Spinner fx:id="widthSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="0">
                         <valueFactory>
                             <SpinnerValueFactory.IntegerSpinnerValueFactory min="400" max="800" initialValue="512"
                                                                             amountToStepBy="64"/>
                         </valueFactory>
                     </Spinner>

                     <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                     <Spinner fx:id="heightSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="1">
                         <valueFactory>
                             <SpinnerValueFactory.IntegerSpinnerValueFactory min="400" max="800" initialValue="512"
                                                                             amountToStepBy="64"/>
                         </valueFactory>
                     </Spinner>
                 </GridPane>

                 <Separator prefWidth="200.0"/>

                 <!-- Noise Parameters -->
                 <Label text="Perlin Noise Parameters" style="-fx-font-weight: bold;"/>
                 <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                     </columnConstraints>
                     <Label text="Random Seed:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                     <Spinner fx:id="randomSeedSpinner" onKeyReleased="#onSeedChanged" onMouseClicked="#onSeedChanged"
                              editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                         <valueFactory>
                             <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="999999" initialValue="1"
                                                                             amountToStepBy="1"/>
                         </valueFactory>
                     </Spinner>

                     <Label text="Cell Size:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                     <Spinner fx:id="cellSizeSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="1">
                         <valueFactory>
                             <SpinnerValueFactory.DoubleSpinnerValueFactory min="1.0" max="100.0" initialValue="16.0"
                                                                            amountToStepBy="1.0"/>
                         </valueFactory>
                     </Spinner>

                     <Label text="Levels:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                     <Spinner fx:id="levelsSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="2">
                         <valueFactory>
                             <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="8" initialValue="4"
                                                                             amountToStepBy="1"/>
                         </valueFactory>
                     </Spinner>

                     <Label text="Attenuation:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                     <Spinner fx:id="attenuationSpinner" editable="true" prefWidth="120.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="3">
                         <valueFactory>
                             <SpinnerValueFactory.DoubleSpinnerValueFactory min="0.1" max="1.0" initialValue="0.5"
                                                                            amountToStepBy="0.1"/>
                         </valueFactory>
                     </Spinner>
                 </GridPane>

                 <Separator prefWidth="200.0"/>

                 <!-- Effects -->
                 <Label text="Effects" style="-fx-font-weight: bold;"/>
                 <VBox spacing="5.0">
                     <CheckBox fx:id="groovyCheckBox" text="Groovy"/>
                 </VBox>

                 <Separator prefWidth="200.0"/>

                 <!-- Generation Controls -->
                 <Label text="Generation" style="-fx-font-weight: bold;"/>
                 <VBox spacing="5.0">
                     <Button fx:id="saveButton" maxWidth="1.7976931348623157E308" text="Save As..."/>
                 </VBox>

                 <!-- Spacer -->
                 <Region VBox.vgrow="ALWAYS"/>
             </VBox>
            
            <!-- Right Panel: Preview -->
             <VBox prefHeight="200.0" prefWidth="100.0">
                 <Label text="Preview" style="-fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                 </Label>

                 <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                             VBox.vgrow="ALWAYS">
                     <VBox.margin>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="0.0"/>
                     </VBox.margin>
                     <StackPane>
                         <ImageView fx:id="heightmapImageView" fitHeight="400.0" fitWidth="400.0"
                                    pickOnBounds="true" preserveRatio="true"/>
                     </StackPane>
                 </ScrollPane>
             </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
