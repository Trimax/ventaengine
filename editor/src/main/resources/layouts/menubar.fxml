<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<MenuBar xmlns:fx="http://javafx.com/fxml" stylesheets="@styles/menubar.css" fx:controller="io.github.trimax.venta.editor.controllers.MenuController">
    <Menu text="Editor">
        <MenuItem text="About" accelerator="Ctrl+H" onAction="#onEditorAbout" />
        <MenuItem text="Exit"  accelerator="Ctrl+Q" onAction="#onEditorQuit" />
    </Menu>
    <Menu text="Archive">
        <MenuItem text="New"   accelerator="Ctrl+N" onAction="#onArchiveNew" />
        <MenuItem text="Save"  accelerator="Ctrl+S" onAction="#onArchiveSave" />
        <MenuItem text="Open"  accelerator="Ctrl+O" onAction="#onArchiveLoad" />
        <MenuItem text="Build" accelerator="Ctrl+B" onAction="#onArchiveBuild" />
    </Menu>
    <Menu text="Group">
        <MenuItem text="Add Group"    accelerator="Ctrl+G"       onAction="#onGroupAdd"    disable="true" fx:id="btnMenuGroupAdd" />
        <MenuItem text="Remove Group" accelerator="Ctrl+Shift+G" onAction="#onGroupRemove" disable="true" fx:id="btnMenuGroupRemove" />
    </Menu>
    <Menu text="Resource">
        <MenuItem text="Add Resource"    accelerator="Ctrl+R"       onAction="#onResourceAdd"    disable="true" fx:id="btnMenuResourceAdd" />
        <MenuItem text="Remove Resource" accelerator="Ctrl+Shift+R" onAction="#onResourceRemove" disable="true" fx:id="btnMenuResourceRemove" />
    </Menu>
    <Menu text="Tools">
        <MenuItem text="Heightmap generator" onAction="#onToolHeightmapGenerator" fx:id="btnMenuToolHeightmapGenerator" />
        <MenuItem text="Texture packer"      onAction="#onToolTexturePacker"      fx:id="btnMenuToolTexturePacker" />
        <MenuItem text="Texture mixer"       onAction="#onToolTextureMixer"       fx:id="btnMenuToolTextureMixer" />
    </Menu>
</MenuBar>